<persistence
	version="2.0"
	xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">

	<persistence-unit name="primary-bloomberg" transaction-type="JTA">
		<properties>
		    <!-- hibernate dialect -->
		    <property name="hibernate.dialect">org.hibernate.dialect.SybaseDialect</property>
		
		    <!-- JDBC connection properties (begin) -->
		    <property name="hibernate.connection.driver_class">com.sybase.jdbc3.jdbc.SybDriver</property>
		    <property name="hibernate.connection.url">jdbc:sybase:Tds:localhost:5000/jbpmtest</property>
		    <property name="hibernate.connection.username">dgluhov</property>
		    <property name="hibernate.connection.password">lbfcjan</property>
		    <!-- JDBC connection properties (end) -->
		</properties>		
	</persistence-unit>

	<persistence-unit
		name="bloomberg"
		transaction-type="RESOURCE_LOCAL">
		<jta-data-source>java:jboss/datasources/BloombergDS</jta-data-source>
		<properties>
			<property
				name="javax.persistence.jdbc.driver"
				value="com.sybase.jdbc3.jdbc.SybDriver" />
			<property
				name="javax.persistence.jdbc.url"
				value="jdbc:sybase:Tds:172.16.21.14:5000/inv_db" />
			<property
				name="javax.persistence.jdbc.user"
				value="dgluhov" />
			<property
				name="javax.persistence.jdbc.password"
				value="lbfcjan" />
			<property
				name="hibernate.dialect"
				value="org.hibernate.dialect.SybaseDialect" />
			<!-- value="org.hibernate.dialect.SybaseAnywhereDialect" -->
			<property
				name="show_sql"
				value="true" />
			<property
				name="hibernate.temp.use_jdbc_metadata_defaults"
				value="false" />
		</properties>
	</persistence-unit>
</persistence>
